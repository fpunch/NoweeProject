<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NoweeColour2"
    android:backgroundTint="@color/NoweeColour2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.noweeproject.ChatActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:text="@string/nowee_chat" />

    <TextView
        android:id="@+id/editText_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="100dp"
        android:hint="@string/select_phone"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/sms_message"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_main"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:hint="@string/enter_message_here"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/message_icon"
        android:layout_width="303dp"
        android:layout_height="61dp"
        android:layout_below="@id/editText_main"
        android:layout_marginStart="-347dp"
        android:layout_marginLeft="-347dp"
        android:layout_marginTop="354dp"
        android:layout_toEndOf="@id/sms_message"
        android:layout_toRightOf="@id/sms_message"
        android:backgroundTint="@color/NoweeColour"
        android:contentDescription="@string/send_a_message"
        android:onClick="smsSendMessage"
        android:text="@string/send_a_message"
        android:visibility="visible" />

    <Button
        android:id="@+id/button_retry"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sms_message"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="141dp"
        android:contentDescription="@string/retry"
        android:onClick="retryApp"
        android:text="@string/retry"
        android:visibility="invisible" />

    <Button
        android:id="@+id/selectContactBtn"
        android:layout_width="316dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="65dp"
        android:backgroundTint="@color/NoweeColour"
        android:text="@string/select_contact" />

</RelativeLayout>
